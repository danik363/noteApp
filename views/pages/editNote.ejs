<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs'); %>
    <link rel="stylesheet" href="/css/editNote.css">
</head>
<body>
    <%- include('../partials/header.ejs'); %>
    <section class="form-section">
        <div class="form-container">
            <form method="POST" action=<%= `/notes/edit/${note._id}` %>>
                <div class="form-floating">
                    <textarea name="content" class="form-control form-textArea" placeholder="Leave a note here" id="floatingTextarea2"><%= note.content %></textarea>
                </div>
                <div class="mb-3 noteName">
                    <label for="name" class="form-label"></label>
                    <input name="name" type="text" class="form-control" value="<%= note.name %>">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" class="btn btn-primary">Cancel</button>
            </form>
        </div>
    </section>
    <%- include('../partials/footer.ejs'); %>
</body>
</html>